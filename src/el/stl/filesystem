#pragma once
#define _FILESYSTEM_

namespace ExtSTL {

class path {
public:
#if UCFG_USE_POSIX
	typedef char value_type;
#else
	typedef Ext::String::Char value_type;
#endif

	path(const char *s)
		:	m_s(s)
	{}

	path(const wchar_t *s)
		:	m_s(s)
	{}

	path(const String& s)
		:	m_s(s)
	{}

	const value_type *c_str() const {
		return m_s;
	}
private:
	Ext::String m_s;
};

bool exists(const path& p);

} // ExtSTL::

namespace std {
using ExtSTL::path;
using ExtSTL::exists;
}

